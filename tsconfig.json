{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "types": ["vitest", "jest", "vue"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.{vue,tsx,ts}"],
  "exclude": [
    "src/vue/App.vue",
    "src/vue/demo/**/*",
    "src/vue/main.ts",
    "src/vue/__tests__/**/*",
    "src/react/App.tsx",
    "src/react/demo/**/*",
    "src/react/main.ts",
    "src/react/__tests__/**/*",
    "dist/**/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
