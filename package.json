{
  "name": "@michaelpumo/screen",
  "author": "Michael Pumo <hello@michaelpumo.com>",
  "description": "A simple Vue component to log the contents of a variable to the screen. Think of it as console.log for the UI.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "version": "0.0.8",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelpumo/screen.git"
  },
  "keywords": [
    "michaelpumo",
    "screen",
    "vue",
    "log",
    "dump",
    "frontend",
    "web"
  ],
  "types": "./dist/types/screen.d.ts",
  "files": [
    "dist"
  ],
  "main": "./dist/screen.umd.js",
  "module": "./dist/screen.es.js",
  "exports": {
    ".": {
      "import": "./dist/screen.es.js",
      "require": "./dist/screen.umd.js"
    },
    "./dist/screen.css": {
      "import": "./dist/screen.css",
      "require": "./dist/screen.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && vue-tsc",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.ts,.vue",
    "test": "vitest --dom",
    "test:ui": "vitest --dom --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/ui": "^1.4.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/runtime-dom": "^3.4.21",
    "@vue/test-utils": "2.4.5",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.23.0",
    "happy-dom": "^14.0.0",
    "postcss": "^8.4.37",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-scoped-preflight": "^2.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vitest": "^1.4.0",
    "vue-eslint-parser": "^9.4.2",
    "vue-tsc": "^2.0.6"
  }
}
