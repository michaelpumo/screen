{
  "name": "@michaelpumo/screen",
  "author": "Michael Pumo <hello@michaelpumo.com>",
  "description": "A simple component to log the contents of a variable to the screen. Think of it as console.log for your UI.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "version": "0.0.15",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelpumo/screen.git"
  },
  "keywords": [
    "michaelpumo",
    "screen",
    "vue",
    "react",
    "log",
    "dump"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./react": {
      "import": {
        "types": "./dist/react/lib.d.ts",
        "default": "./dist/react/screen.es.js"
      },
      "require": {
        "types": "./dist/react/lib.d.ts",
        "default": "./dist/react/screen.umd.js"
      }
    },
    "./vue": {
      "import": {
        "types": "./dist/vue/lib.d.ts",
        "default": "./dist/vue/screen.es.js"
      },
      "require": {
        "types": "./dist/vue/lib.d.ts",
        "default": "./dist/vue/screen.umd.js"
      }
    },
    "./dist/screen.css": {
      "import": "./dist/screen.css",
      "require": "./dist/screen.css"
    }
  },
  "scripts": {
    "dev:react": "vite ./src/react --config vite.config.ts",
    "dev:vue": "vite ./src/vue --config vite.config.ts",
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.ts,.vue",
    "test": "vitest --dom",
    "test:ui": "vitest --dom --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.5",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/ui": "^1.4.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/runtime-dom": "^3.4.21",
    "@vue/test-utils": "2.4.5",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.24.1",
    "happy-dom": "^14.7.1",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "tailwindcss-scoped-preflight": "^3.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vitest": "^1.4.0",
    "vue-eslint-parser": "^9.4.2",
    "vue-tsc": "^2.0.11"
  }
}
